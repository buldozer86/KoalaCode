{% extends 'base.html.twig' %}

{% block title %}
    Registration
{% endblock %}
{% block body %}
    <div class="card border-success mb-3">
        <div class="card-header">
            <h3>Register</h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_errors(form) }}

            <div class="form-group row">
                <div class="col-lg-6">
                    {{ form_row(form.login) }}
                </div>
                <div class="col-lg-6">
                    {{ form_row(form.email) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-lg-6">
                    {{ form_row(form.firstName) }}
                </div>
                <div class="col-lg-6">
                    {{ form_row(form.lastName) }}
                </div>
            </div>

            <div>

            </div>

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}